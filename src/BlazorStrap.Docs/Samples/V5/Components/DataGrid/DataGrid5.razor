@using BlazorComponentUtilities
@using BlazorStrap_Docs.SamplesHelpers.Content.Tables
@using BlazorStrap.Extensions
@using BlazorStrap.V5
<h5>DataGrid with Various Data Types</h5>
<p>This sample demonstrates DataGrid sorting and display with common data types: string, int, long, DateTime, DateTimeOffset, decimal, bool, and enum.</p>

<div class="input-group mb-3">
    <span class="input-group-text">Items per page</span>
    <select class="form-select" aria-label="Items Per Page" @bind="@_pagination.ItemsPerPage">
        <option>5</option>
        <option>10</option>
        <option>20</option>
        <option>50</option>
    </select>
</div>

<BSDataGrid IsStriped="true" IsSmall="true" Items="_products.AsQueryable()" IsMultiSort="true" @ref="_dataGrid" Pagination="_pagination" IsVirtualized="true">
    <Columns>
        <PropertyColumn Property="p => p.Id" IsSortable="true" Title="ID (int)" InitialSorted="true"/>
        <PropertyColumn Property="p => p.Name" IsSortable="true" Title="Name (string)"/>
        <PropertyColumn Property="p => p.SerialNumber" IsSortable="true" Title="Serial (long)"/>
        <PropertyColumn Property="p => p.Price" IsSortable="true" Title="Price (decimal)" Format="C"/>
        <PropertyColumn Property="p => p.IsActive" IsSortable="true" Title="Active (bool)"/>
        <PropertyColumn Property="p => p.Category" IsSortable="true" Title="Category (enum)"/>
        <PropertyColumn Property="p => p.CreatedDate" IsSortable="true" Title="Created (DateTime)" Format="yyyy-MM-dd"/>
        <PropertyColumn Property="p => p.LastModified" IsSortable="true" Title="Modified (DateTimeOffset)" Format="yyyy-MM-dd HH:mm"/>
        <TemplateColumn Property="p => p.Rating" IsSortable="true" Title="Rating (double)">
            <Content>@context.Rating.ToString("F1") ⭐</Content>
        </TemplateColumn>
    </Columns>
</BSDataGrid>